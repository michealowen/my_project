<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.jpa.test.pack.war">

    <class name="entity.station" table="B_STATIONINFO_BRIEF">
        <id name="sid" type="java.lang.Integer"  length="4">
            <generator class="assigned"/>
        </id>
        <property name="sname" column="STATIONNAME" type="java.lang.String"/>
        <property name="x" column="X" type="java.math.BigDecimal"/>
        <property name="y" column="Y" type="java.math.BigDecimal"/>
        <!--  <property name="address" type="java.lang.String"/>-->
        <property name="baidux" column="BAIDU_X" type="java.math.BigDecimal"/>
        <property name="baiduy" column="BAIDU_Y" type="java.math.BigDecimal"/>
        <property name="address" column="ADDRESS" type="java.lang.String"/>
        <property name="serviceTime"  column="SERVICETIME" type="java.lang.String"/>
    </class>

</hibernate-mapping>

