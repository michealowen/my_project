<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.jpa.test.pack.war">

    <class name="entity.users" table="users">
        <id name="userid" column="USERID" type="java.lang.Integer" > 
                   <generator class="assigned"/>
        </id>
        <property name="username" column="USERNAME" type="java.lang.String"/>
        <property name="password" column="PASSWORD" type="java.lang.Integer"/>
    </class>

</hibernate-mapping>

